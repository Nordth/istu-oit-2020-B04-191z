@model SolovevaSite.Models.PageViewModel

@{
    ViewData["Title"] = "Создание новой страницы";
}

<head>
    <link rel="stylesheet" href="../style.css">
</head>

<h1>Создание новой страницы</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Заголовок</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label">Текст страницы</label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Изображение</label>
                <input asp-for="Image" name="Image" class="form-control" type="file" onchange="check_extension(this.value, 'upload');" />
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" id="upload"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

<script src="@Url.Content("~/js/validate.js")" type="text/javascript"></script>
